# Скопируйте в secret.yaml и заполните реальными значениями.
# secret.yaml добавьте в .gitignore и никогда не коммитьте!
#
# Создание из файла:
#   kubectl apply -f secret.yaml
#
# Или создание через kubectl (значения не попадут в файл):
#   kubectl create secret generic homecenter-secrets \
#     --from-literal=admin-username=admin \
#     --from-literal=admin-password='ВАШ_ПАРОЛЬ' \
#     --from-literal=qwen-api-key='sk-ВАШ_КЛЮЧ'
---
apiVersion: v1
kind: Secret
metadata:
  name: homecenter-secrets
  namespace: default
type: Opaque
stringData:
  admin-username: "admin"          # Замените на свой логин
  admin-password: "admin123"      # Замените на свой пароль
  qwen-api-key: ""                # Замените на ключ Qwen/DashScope API
